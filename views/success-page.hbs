<!DOCTYPE html>
<html>
<head>
    <title>Success Page</title>
</head>
<body>
    <h1>Success Page</h1>
    <img src="views/aqi_colors.png" alt="The ranges of AQI (air-quality index) values">
    <table>
        <thead>
            <tr>
                <th>Monitor ID</th>
                <th>AQI Value</th>
            </tr>
        </thead>
        <tbody>
            {{#each aqiData}}
            <tr>
                <td>{{this.monitorId}}</td>
                <td>{{this.aqiValue}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <script>
        fetch('/aqiData')
        .then(response => response.json())
        .then((data) => {
          console.log(data);
          // do something with the data here like send it to a table
        })
        .catch(error => {
          console.log(error);
        });
    </script>
</body>
</html>
