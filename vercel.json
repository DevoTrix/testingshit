{
  "version": 2,
  "builds": [
    { "src": "backend/server.py", "use": "@vercel/python" },
    { "src": "frontend/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/(.*)",
      "dest": "backend/server.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/server.js"
    }
  ]
}
